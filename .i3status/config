general {
        colors = true
        interval = 5
}

order += "disk /"
order += "disk /mnt/alpha"
# order += "run_watch DHCP"
order += "ethernet eno1"
order += "cpu_temperature 0"
order += "cpu_usage"
order += "load"
order += "volume master"
#order += "battery all"
order += "tztime local"

ethernet eno1 {
        # if you use %speed, i3status requires the cap_net_admin capability
        format_up = "E: %speed"
        format_down = "E: down"
}

run_watch DHCP {
        pidfile = "/var/run/dhclient*.pid"
}

tztime local {
        format = "%Y-%m-%d %H:%M:%S"
}

load {
        format = "Load: %1min"
}

cpu_temperature 0 {
        format = "T: %degrees°C"
        path = "/sys/class/thermal/thermal_zone0/temp"
}

cpu_usage {
        format = "CPU: %usage"
}

disk "/" {
        format = "/: %free"
}

disk "~" {
        format = "~: %free"
}

disk "/mnt/alpha" {
        format = "alpha: %free"
}

volume master {
        format = "♪: %volume"
        format_muted = "♪: muted (%volume)"
        device = "default"
        mixer = "Master"
        mixer_idx = 0
}

battery all {
    format = "%status %percentage (%remaining %consumption)"
    last_full_capacity=true
}
