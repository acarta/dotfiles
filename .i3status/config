general {
        colors = true
        interval = 5
}

order += "disk /"
order += "disk /home"
order += "ethernet enp0s31f6"
order += "wireless wlp4s0"
order += "cpu_temperature 0"
order += "cpu_usage"
order += "load"
order += "volume master"
order += "battery all"
order += "tztime local"

wireless wlp4s0 {
        # if you use %speed, i3status requires the cap_net_admin capability
        format_up = "W: %ip (%bitrate)"
        format_down = "W: down"
}

ethernet enp0s31f6 {
        # if you use %speed, i3status requires the cap_net_admin capability
        format_up = "E: %ip (%bitrate)"
        format_down = "E: down"
}

run_watch DHCP {
        pidfile = "/var/run/dhclient*.pid"
}

tztime local {
        format = "%Y-%m-%d %H:%M:%S"
}

load {
        format = "Load: %1min"
}

cpu_temperature 0 {
        format = "T: %degrees°C"
        path = "/sys/class/thermal/thermal_zone0/temp"
}

cpu_usage {
        format = "CPU: %usage"
}

disk "/" {
        format = "/: %free"
}

disk "/home" {
        format = "/home: %free"
}

volume master {
        format = "♪: %volume"
        format_muted = "♪: muted (%volume)"
        device = "default"
        mixer = "Master"
        mixer_idx = 0
}

battery all {
    format = "%status %percentage (%remaining %consumption)"
}
