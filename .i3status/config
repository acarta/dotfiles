run_watch DHCP {
        pidfile = "/var/run/dhclient*.pid"
}

tztime local {
        format = "%Y-%m-%d %H:%M:%S"
}

load {
        format = "Load: %1min"
}

cpu_temperature 0 {
        format = "T: %degrees°C"
        path = "/sys/class/thermal/thermal_zone0/temp"
}

cpu_usage {
        format = "CPU: %usage"
}

disk "/" {
        format = "/: %free"
}

disk "~" {
        format = "~: %free"
}

disk "/mnt/alpha" {
        format = "alpha: %free"
}

volume master {
        format = "♪: %volume"
        format_muted = "♪: muted (%volume)"
        device = "default"
        mixer = "Master"
        mixer_idx = 0
}

battery all {
    format = "%status %percentage (%remaining %consumption)"
    last_full_capacity=true
}
